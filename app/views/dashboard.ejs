<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kemiger</title>
    <link rel="icon" href="/assets/icons/icon-32x32.png" sizes="32x32">
    <link rel="icon" href="/assets/icons/icon-192x192.png" sizes="192x192">
    <link rel="apple-touch-icon" href="/assets/icons/icon-180x180.png">
    <meta name="msapplication-TileImage" content="/assets/icons/icon-270x270.png">
    <script src="https://kit.fontawesome.com/44e05cc47c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="/css/glide.core.css">
    <link rel="stylesheet" href="/css/glide.theme.css">
    <link rel="stylesheet" href="/css/utils.css">
    <link rel="stylesheet" href="/css/header-footer.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
    <%- include('partials/admin-nav.ejs') %>
        <section
            class="menu-wrapper container-fluid d-flex flex-column flex-lg-row justify-content-lg-between mt-3 h-100 px-3 px-md-0 col-md-11 col-lg-10">
            <div class="side-menu-wrapper col-12 col-lg-5 col-xl-4">
                <h1 class="fw-normal my-3">Merhaba <span class="text-primary">
                        <%= user.nickname %>
                    </span>!</h1>
                <div class="side-menu-btns d-flex flex-wrap">
                    <a type="button" class="btn btn-primary active mb-2 me-2" role="button" aria-controls="swiperMenu">
                        <span class="rounded-pill">
                            <i class="fa-solid fa-panorama me-2"></i>Swiper Images
                        </span>
                    </a>
                    <a type="button" class="btn btn-primary mb-2 me-2" role="button" aria-controls="productsMenu">
                        <span class="rounded-pill">
                            <i class="fa-solid fa-layer-group me-2"></i>Ürünler
                        </span>
                    </a>
                </div>
                <div id="alerts" class="d-none d-md-block"></div>
            </div>
            <div class="main-menu-wrapper col-12 col-lg-7 col-xl-8 ms-lg-3">
                <div class="menu d-flex flex-column align-items-center">
                    <div id="productsMenu" class="main-menu col-12 d-none">
                        <h1 class="fw-normal my-3"><i class="fa-solid fa-layer-group me-2"></i>Ürünler<span
                                class="loader"></span></h1>
                        <div class="menu-section">
                            <div class="accordion accordion-flush" id="accordionFlush" bis_skin_checked="1">
                                <div class="accordion-item p-2 container-fluid" bis_skin_checked="1">
                                    <h2 class="accordion-header" id="flush-headingOne">
                                        <button class="accordion-button fw-bold collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#flush-collapseOne"
                                            aria-expanded="false" aria-controls="flush-collapseOne">
                                            Ürün Ekle
                                            <span class="loader ms-1"></span>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseOne" class="accordion-collapse collapse"
                                        aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlush"
                                        bis_skin_checked="1">
                                        <div class="accordion-body" bis_skin_checked="1">
                                            <%- include('partials/forms/addProductForm.ejs') %>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item p-2 container-fluid" bis_skin_checked="1">
                                    <h2 class="accordion-header" id="flush-headingTwo">
                                        <button class="accordion-button fw-bold collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo"
                                            aria-expanded="false" aria-controls="flush-collapseTwo">
                                            Ürünü Güncelle
                                            <span class="loader ms-1"></span>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseTwo" class="accordion-collapse collapse"
                                        aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlush"
                                        bis_skin_checked="1">
                                        <div class="accordion-body" bis_skin_checked="1">
                                            <%- include('partials/forms/updateProductForm.ejs') %>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item p-2 container-fluid" bis_skin_checked="1">
                                    <h2 class="accordion-header" id="flush-headingThree">
                                        <button class="accordion-button fw-bold collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#flush-collapseThree"
                                            aria-expanded="false" aria-controls="flush-collapseThree">
                                            Ürünü Sil
                                            <span class="loader ms-1"></span>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseThree" class="accordion-collapse collapse"
                                        aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlush"
                                        bis_skin_checked="1">
                                        <div class="accordion-body" bis_skin_checked="1">
                                            <%- include('partials/forms/deleteProductForm.ejs') %>
                                        </div>
                                    </div>
                                </div>

                                <div class="accordion-item p-2 container-fluid" bis_skin_checked="1">
                                    <h2 class="accordion-header" id="flush-headingFour">
                                        <button class="accordion-button fw-bold collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#flush-collapseFour"
                                            aria-expanded="false" aria-controls="flush-collapseFour">
                                            Ürünü ada veya ID'ye göre bul
                                            <span class="loader ms-1"></span>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseFour" class="accordion-collapse collapse"
                                        aria-labelledby="flush-headingFour" data-bs-parent="#accordionFlush"
                                        bis_skin_checked="1">
                                        <div class="accordion-body" bis_skin_checked="1">
                                            <%- include('partials/forms/getProductForm.ejs') %>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div id="swiperMenu" class="main-menu col-12 col-xl-7">
                        <h1 class="fw-normal my-3"><i class="fa-solid fa-panorama me-2"></i>Swiper Images</h1>
                        <div class="menu-section">
                            <div class="accordion accordion-flush" id="accordionFlush" bis_skin_checked="1">

                                <div class="accordion-item p-2 container-fluid" bis_skin_checked="1">
                                    <h2 class="accordion-header" id="flush-headingFive">
                                        <button class="accordion-button fw-bold" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#flush-collapseFive" aria-expanded="true"
                                            aria-controls="flush-collapseFive">
                                            Add Swiper Images
                                            <span class="loader ms-1"></span>
                                        </button>
                                    </h2>
                                    <div id="flush-collapseFive" class="accordion-collapse collapse show"
                                        aria-labelledby="flush-headingFive" data-bs-parent="#accordionFlush"
                                        bis_skin_checked="1">
                                        <div class="accordion-body" bis_skin_checked="1">
                                            <%- include('partials/forms/addSwiperForm.ejs') %>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('partials/footer.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>
            <script src="/js/dashboard.js"></script>
            <script defer type="module" src="/js/dashboard-glide.js"></script>
</body>

</html>