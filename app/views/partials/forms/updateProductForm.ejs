<form id="updateProductForm" data-header="flush-headingTwo">
    <div class="input-group mb-2" bis_skin_checked="1">
        <span class="input-group-text"><i class="fa-solid fa-hashtag me-1"></i>|<i class="fa-solid fa-magnifying-glass ms-1"></i></span>
        <input type="text" class="form-control productIdInput" placeholder="Ürün isimi veya ID'si girin" aria-label="Id"
            aria-describedby="input-group-left">
    </div>
    <div class="card d-flex flex-column flex-md-row d-none position-relative overflow-hidden" bis_skin_checked="1">
        <h5 class="ms-3 mt-3 position-absolute top-0 start-0 product-id">Id: <span id="productId"></span></h5>
        <div style="height:0px;width:0px;overflow:hidden">
            <input id="productImgInput" class="updateProductImgInput productImgInput" type="file" name="image" accept="image/*">
        </div>
        <img id="productImg" src="https://placehold.co/1000x1000?text=Click+me\nto+upload\nimage"
            class="updateProductImg col-12 col-md-6 col-lg-4">
        <div class="card-body d-flex flex-column justify-content-center p-lg-3" bis_skin_checked="1">
            <label for="productName" class="text-muted">Ürün İsimi</label>
            <h5 id="productName" contenteditable="true" class="card-title">Provide Product Info</h5>
            <label for="productDesc" class="text-muted">Ürün Hakkında</label>
            <p id="productDesc" contenteditable="true" class="card-text">Provide Product Info</p>
            <label for="productAdditionalDesc" class="text-muted">Ürün Ek Açıklaması</label>
            <p id="productAdditionalDesc" contenteditable="true" class="card-text mb-2">
                Click me to edit</p>
            <label for="productBenefits" class="text-muted">Ürün Avantajları</label>
            <input id="productBenefitsInput" class="form-control mb-2" placeholder="Split with comma">
            <div id="productBenefits" class="d-flex flex-wrap mt-1"></div>
            <label for="productCategories" class="text-muted">Ürün Kategorisi</label>
            <input id="productCategoriesInput" class="form-control" placeholder="Split with comma">
            <div id="productCategories" class="d-flex flex-wrap mt-2"></div>
            <small class="text-muted mt-3">Son güncelleme</small>
            <p id="productTimeStamp" class="card-text mt-1"><small class="text-muted"></small></p>
        </div>
    </div>
    <button id="submitBtn" type="button" class="btn btn-primary mt-3 d-none">Ürünü Güncelle</button>
</form>