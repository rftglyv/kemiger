<form id="addProductForm" data-header="flush-headingOne">
    <!-- Non Shown -->
    <div class="input-group mb-2 d-none" bis_skin_checked="1">
        <span class="input-group-text"><i class="fa-solid fa-hashtag me-2"></i>Id</span>
        <input type="text" class="form-control productIdInput" placeholder="Product ID" aria-label="Id"
            aria-describedby="input-group-left">
    </div>
    <!-- Non Shown -->
    <div class="card d-flex flex-column flex-md-row position-relative" bis_skin_checked="1">
        <div style="height:0px;width:0px;overflow:hidden">
            <input id="productImgInput" class="addProductImgInput productImgInput" type="file" name="image" accept="image/*">
        </div>
        <img id="productImg" src="https://placehold.co/1000x1000?text=Click+me\nto+upload\nimage"
            class="addProductImg col-12 col-md-6 col-lg-4">
        <div class="card-body d-flex flex-column justify-content-center p-lg-3" bis_skin_checked="1">
            <small class="text-muted">Ürün İsimi</small>
            <h5 id="productName" contenteditable="true" class="card-title">Click me to edit</h5>
            <small class="text-muted">Ürün Hakkında</small>
            <p id="productDesc" contenteditable="true" class="card-text mb-2">
                Click me to edit</p>
            <small class="text-muted">Ürün Ek Açıklaması</small>
            <p id="productAdditionalDesc" contenteditable="true" class="card-text mb-2">
                Click me to edit</p>
            <label for="productBenefits" class="text-muted">Ürün Avantajları</label>
            <input id="productBenefitsInput" class="form-control mb-2" placeholder="Virgülle ayır">
            <label for="productCategories" class="text-muted">Ürün Kategorisi</label>
            <input id="productCategoriesInput" class="form-control" placeholder="Kategori ekle">

            <!-- Non Shown -->
            <div class="d-none">
                <h5 class="ms-3 mt-3 position-absolute top-0 start-0 product-id">Id: <span id="productId"></span>
                </h5>
                <small class="text-muted mt-3">Son güncelleme</small>
                <div id="productCategories" class="d-flex flex-wrap mt-1"></div>
                <div id="productBenefits" class="d-flex flex-wrap mt-1"></div>
                <p id="productTimeStamp" class="card-text mt-1"><small class="text-muted"></small></p>
            </div>
            <!-- Non Shown -->
        </div>
    </div>
    <button id="submitBtn" type="button" class="btn btn-primary mt-3">Ürün Ekle</button>
</form>